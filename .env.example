# Notification Service - Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./notification_service.db
DATABASE_ECHO=False

# Service Configuration
SERVICE_NAME=notification-service
SERVICE_PORT=8001
SERVICE_HOST=0.0.0.0
ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
PYTHONUNBUFFERED=1
API_TITLE=Notification Service
API_DESCRIPTION=Comprehensive notification management and delivery service
API_VERSION=1.0.0

# Performance Configuration
MAX_POOL_SIZE=20
MIN_POOL_SIZE=5
POOL_RECYCLE=3600

